{
  "compilerOptions": {
    "target": "es2017",
    "module": "esNext",
    "outDir": "lib",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "sourceMap": true,
    "inlineSources": true,
    "jsx": "react-jsxdev",
    "allowJs": false,
    "declaration": true,
    "declarationDir": "lib",
    "declarationMap": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "esModuleInterop": false,
    "isolatedModules": false,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "strict": true,
    "rootDir": ".",
    "baseUrl": ".",
    "types": [],
    "typeRoots": ["node_modules/@types", "helpers/types"],
    "paths": {
      "~~": ["./src/"],
      "~~/*": ["./src/*"]
    }
  },
  "include": ["src", "test"],
  "files": ["hardhat.config.ts"],
  "exclude": [
    "lib/**/*",
    "node_modules",
    "**/node_modules",
    "**/node_modules/**",
    "../../node_modules/**/*",
    ".husky",
    "./tailwind.config.js",
    "./.yalc/**/*"
  ]
}
